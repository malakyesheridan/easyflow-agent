{
  "name": "tgw-operations",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "kill:ports": "powershell -ExecutionPolicy Bypass -File scripts/kill-dev-ports.ps1",
    "clean:next": "powershell -ExecutionPolicy Bypass -File scripts/clean-next-cache.ps1",
    "dev": "npm run kill:ports && npm run clean:next && npm run dev:web",
    "dev:web": "next dev -p 3000",
    "dev:api": "cross-env PORT=4000 tsx src/api/server.ts",
    "dev:worker": "cross-env PORT=4001 tsx src/worker/index.ts",
    "dev:all": "npm run kill:ports && npm run clean:next && concurrently \"npm run dev:web\" \"npm run dev:api\" \"npm run dev:worker\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "node --test --import tsx tests/auth-gating.test.ts tests/surface-access.test.ts tests/install-productivity.test.ts tests/schedule-unassigned.test.ts tests/invoice-payments.test.ts tests/xero-integration.test.ts tests/clients.test.ts",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "seed:dev": "tsx scripts/seed-dev.ts",
    "seed:scale": "tsx scripts/seed-scale.ts"
  },
  "dependencies": {
    "@react-pdf/renderer": "^4.3.2",
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.39.3",
    "@tanstack/react-query": "^5.20.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "drizzle-kit": "^0.20.14",
    "drizzle-orm": "^0.29.3",
    "lucide-react": "^0.344.0",
    "next": "14.2.5",
    "pg": "^8.11.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.2.1",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.0",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.21.0",
    "typescript": "^5.4.5"
  }
}
